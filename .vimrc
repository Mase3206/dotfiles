" line numbering
set number relativenumber


" TAB SETTINGS
" set tab *character* width to 4 cells
set tabstop=4

" prevent spaces from replacing tabs
set softtabstop=0 noexpandtab

" use tab characters for indentation, 4 cells wide
set shiftwidth=4


" MISC
" syntax highlighting
syntax on

" auto-indent
set autoindent

" enable mouse support
set mouse=a
